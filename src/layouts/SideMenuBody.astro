---
import { Icon } from 'astro-icon';
import Nav from "../components/Nav.astro";


---
<style lang="scss" is:global>
html {
	overflow: hidden;
}
html, body {
	height: 100%;
	overscroll-behavior: none;
}
body {
	overflow-x: scroll;
	width: 100vw;
	display: flex;
	flex-direction: row-reverse;
	scroll-snap-type: x mandatory;
	scrollbar-width: none;
	scroll-behavior: smooth;
	&::-webkit-scrollbar {
		width: 0;
		height: 0;
	}
}

aside {
	order: 3;
}

main {
	order: 1;
	scroll-snap-align: end;
	height: 100%;
	flex: 1 0 100vw;
	overflow-y: auto;
}

[show-aside] {
	z-index: 10;
	appearance: none;
	margin: 0;
	padding: 0;
	border: none;
	color: #ddd;
	backdrop-filter: blur(2px);
	border-radius: 5px;
	background: #fff2;
	border: 1px solid #fff4;
	right: -2em;
	display: block;
	flex: 0 0 2em;
	margin-right: -2em;
	height: 2em;
	order: 2;
	transition: .1s color ease-in-out;
	cursor: pointer;
	&:active {
		color: #555;
	}
}
</style>

<body>
    <Nav/>
    <button show-aside aria-label="switch aside visibilty" onclick="document.body.scrollTo({left: document.body.scrollLeft != 0 ? 0 : -9999999})">
        <Icon name="mdi:menu"/>
    </button>
    <main>
		<slot></slot>
    </main>
</body>