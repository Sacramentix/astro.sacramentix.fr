                </section>
            </div>
        </main>
        <button no-print save-as-pdf onclick="window.print()">Save as pdf</button>
    </body>
</html>

<style lang="scss" is:global>
[astro-icon] {
	width: 1.5em;
}

html, body {
	margin: 0;
	padding: 0;
}
body {
	background: #000;
	padding: 25px 0;
}
h1, h2, h3, h4 {
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 1ch;
}

h1 {
	text-align: center;
	font-size: 1.8em;
}

h2 {
	text-align: center;
	font-size: 1.4em;
	margin: 0.5em;
	color: hsl(175, 100%, 50%);
}

h3 {
	text-align: center;
	margin: 0.25em;
	color: hsl(175, 60%, 50%);
}

h4 {
	text-align: center;
	margin: 0.15em;
	color: hsl(175, 30%, 50%);
}

a {
	text-decoration: none;
	color: currentColor;
}

ul {
	margin: 0.25em;
}

p {
    margin: 1ch 0;
}


main {
	margin: 0 auto;
	max-width: 1000px;
	aspect-ratio: 8.27/11.67;
	border-radius: 5px;
	background: #222;
	color: #eee;
	font-family: 'Source Code Pro', monospace;
	display: grid;
	padding: 5px;
	gap: 5px;
	grid-template-areas:
	"s c c";
	grid-template-columns: .9fr 1fr 1fr;
	// set the font size to 16 pixel when the screen is at least 1000px with a padding of 5px
	font-size: min(calc((100vw - (5px * 2)) / (1000 / 16)), 16px);
	box-shadow: 0 0 5px cyan;
}

[cv-side] {
	grid-area: s;
	// background: #fff3;
	border-right: 1px solid #ddd;
	// border-radius: 5px;
	padding: 1ch;
}
[cv-content] {
	grid-area: c;
	// background: #fff3;
	padding: 0 1ch;
}

[cv-logo] {
	grid-area: i;
	// background: #fff3;
	border-radius: 5px;
	max-width: 100%;
	max-height: 20em;
}
[cv-links] {
	a {
		display: flex;
		align-items: center;
		gap: 1ch;
	}
}
[cv-contact] {
	a {
		display: flex;
		align-items: center;
		gap: 1ch;
	}
}

[cv-stacks] {
	border-radius: 5px;
	
	ul {
		column-count: 3;
	}
}

[cv-education] {
	ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		gap: 2ch;
	}
	li {
		max-width: 35%;
	}
}

[cv-who-i-am] {
    strong {
        font-size: 1.1em;
        font-weight: 900;
        color: hsl(175, 80%, 50%);
    }
}

[cv-qr-code] {
    border-radius: 5px;
    image-rendering: pixelated;
    box-sizing: border-box;
    width: 100%;
    height: auto;
    padding: 1em;
    background: #fff;

}

[save-as-pdf] {

	position: fixed;
	right: 15px;
	bottom: 15px;
	background: rgb(246, 82, 56);
	color: #fff;
	font-size: 1.5em;
	border: none;
	border-radius: 25px;
	padding: 15px;
	cursor: pointer;
	transition: transform ease-in-out .1s;
	&:hover {
		transform: scale(1.1);
	}
}

[easter-egg] {
    margin: 0;
    display: inline;
    font-size: .7em;
    opacity: .6;
    > a {
        color: inherit;
        text-decoration: underline;
    }
}

[for-ats] {
	color: #222;
	font-size: 1px;
	padding: 0;
	margin: 0;
}

// CSS for the prit layout
@page { size: auto;  margin: 0mm; }
@media print {
	main {
		padding: 0;
		margin: 0;
        background: #fff;
        color: #000;
		// font-size: 12px;
	}
    h1, h2, h3, h4, h5, strong {
        filter: brightness(0.6);
    }
	body {
		padding: 0;
	}
   	[no-print] {
		display: none!important
	}
}
</style>
