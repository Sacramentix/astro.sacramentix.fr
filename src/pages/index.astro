---
import { Icon } from 'astro-icon';
import Header from '../components/Header.astro';
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';

//@ts-ignore
import Field from '../components/art/NeonParallax.astro';
import HexaGridStacks from '../components/art/HexaGridStacks.astro';

---

<style is:global lang="scss">
html {
	overflow: hidden;
}
html, body {
	height: 100%;
	overscroll-behavior: none;
}
body {
	overflow-x: scroll;
	width: 100vw;
	display: flex;
	scroll-snap-type: x mandatory;
	scrollbar-width: none;
	scroll-behavior: smooth;
	&::-webkit-scrollbar {
		width: 0;
		height: 0;
	}
}
main {
	scroll-snap-align: end;
	height: 100%;
	overflow-y: auto;
	flex: 1 0 100vw;
	display: grid;
	grid-template-rows: 1fr;
	grid-template-columns: 1fr;
	place-items: start center;
	background: #000;
	// position: relative;
	// overflow-x: hidden;
	> * {
		width: 100%;
		height: 100%;
		grid-column: 1 / 2;
		grid-row: 1 / 2;
	}
}

[show-aside] {
	z-index: 10;
	appearance: none;
	margin: 0;
	padding: 0;
	border: none;
	border-radius: 5px;
	background: #fff5;
	right: -2em;
	display: block;
	flex: 0 0 2em;
	margin-right: -2em;
	height: 2em;
}

[intro-section] {
	min-height: 500px;
	display: flex;
	flex-wrap: wrap;
	// justify-content: center;
	// align-items: center;
	padding: max(10vw, 25px);
	gap: 25px;
	> h2 {
		font-size: calc(1.5em + 2vmin);
		flex: 3 0 100px;
		text-align: center;
		max-width: 100%;
		display: flex;
		flex-direction: column;
	}
	> p {
		flex: 7 0 400px;
		padding: 0 10vw;
		// max-width: min(300px, 100%);	
	}
}

[stacks-section] {
	
	display: grid;
	place-items: center;
	> h2 {
		text-align: center;
	}
}

[loved-stacks] {
	[hexa-container] {
		filter: drop-shadow(0px 0px 1px #fffa) drop-shadow(0px 0px 5px rgb(0, 255, 8));
	}
}

[known-stacks] {
	[hexa-container] {
		filter: drop-shadow(0px 0px 1px #fffa) drop-shadow(0px 0px 5px rgb(0, 255, 183));
	}
}

[hated-stacks] {
	[hexa-container] {
		filter: drop-shadow(0px 0px 1px #fffa) drop-shadow(0px 0px 5px rgb(255, 0, 0));
		> a {
			&:hover {
				filter: brightness(0.75);
				--z: -40px;
				[astro-icon] {
					filter: grayscale(0.8);
				}
			}
		}
	}
}

[stacks-to-learn] {
	[hexa-container] {
		filter: drop-shadow(0px 0px 1px #fffa) drop-shadow(0px 0px 5px rgb(0, 85, 255));
	}
}

</style>

<html lang="en">
	<head>
		<MainHead title="Sacramentix" description="Sacramentix's portfolio" />
	</head>
	<body >
		<Nav />
		<button show-aside onclick="document.body.scrollTo({left: document.body.scrollLeft == 0 ? 99999999 : 0})"></button>
		<main>
			<Header/>
			<Field>
